{
    "manifest_version": 3,
    "name": "TabAI",
    "version": "1.0",
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "activeTab",
        "sidePanel"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "side_panel": {
        "default_path": "popup/popup.html"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content/content.js"]
    }],
    
    "web_accessible_resources": [{
        "resources": ["popup/*"],
        "matches": ["<all_urls>"]
    }]
}